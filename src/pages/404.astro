---
import BaseLayout from '../layouts/BaseLayout.astro';
import HeaderStatic from '../components/HeaderStatic';
import FooterStatic from '../components/FooterStatic';
import WhatsAppButton from '../components/WhatsAppButton';
import QuickQuoteTab from '../components/QuickQuoteTab';
import { ArrowLeft } from 'lucide-react';
---

<BaseLayout title="Seite nicht gefunden - Serviceplus Stuttgart" description="Die angeforderte Seite wurde nicht gefunden.">
  <HeaderStatic client:load />
  <div class="min-h-screen flex items-center justify-center pt-32 pb-16 px-4">
    <div class="text-center">
      <h1 class="text-4xl font-bold text-midnight mb-4">Seite nicht gefunden</h1>
      <p class="text-gray-600 mb-8">Die angeforderte Seite existiert nicht.</p>
      <a
        href="/"
        class="inline-flex items-center gap-2 text-midnight hover:text-midnight/80 transition-colors"
      >
        <ArrowLeft size={20} />
        Zur√ºck zur Startseite
      </a>
    </div>
  </div>
  <FooterStatic client:load />
  <WhatsAppButton client:load />
  <QuickQuoteTab client:load />
</BaseLayout>
